<Window x:Class="Progetto.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Progetto"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <ListBox Grid.RowSpan="3" ItemsSource="{Binding GpsLocations}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Cognome}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Button VerticalAlignment="Bottom" Grid.Column="1" Content="Importa" Height="50" Command="{Binding ImportCommand}"/>
    </Grid>
</Window>
